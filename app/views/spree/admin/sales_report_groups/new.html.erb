<%= render partial: 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:new_sales_report_group, scope: :grouped_sales_reports) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back), collection_url, icon: 'icon-arrow-left' %>
  </li>
<% end %>

<%= render partial: 'spree/shared/error_messages', locals: { target: @sales_report_group } %>

<%= form_for [:admin, @sales_report_group] do |f| %>
  <fieldset class="no-border-top">

    <%= render partial: 'form', locals: { f: f } %>

    <div class="clear"></div>

    <%= render partial: 'spree/admin/shared/new_resource_links' %>

  </fieldset>
<% end %>
